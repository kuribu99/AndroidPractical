<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kongmy.androidprac.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Point 1" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_p1_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="X-coordinate"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_p1_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="Y-coordinate"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Point 2" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_p2_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="X-coordinate"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_p2_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:hint="Y-coordinate"
            android:inputType="numberDecimal|numberSigned"
            android:maxLength="10" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_columnSpan="3"></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="2"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Midpoint" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_mid_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:gravity="right"
            android:hint="X-coordinate"
            android:maxLength="10"
            android:text="-" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tbx_mid_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:hint="Y-coordinate"
            android:maxLength="10"
            android:text="-" />

    </android.support.design.widget.TextInputLayout>

</GridLayout>
